<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="textStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">@dimen/padding_16</item>
        <item name="android:textSize">@dimen/textSize_12</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="editInputNumber">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/padding_16</item>
        <item name="android:inputType">numberDecimal</item>
    </style>

    <style name="editInputName">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/padding_16</item>
    </style>

    <style name="textStyleListItem">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding_4</item>
        <item name="android:textSize">@dimen/textSize_12</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="textStyleHeaderItem">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding_4</item>
        <item name="android:textSize">@dimen/textSize_12</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="btn_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
